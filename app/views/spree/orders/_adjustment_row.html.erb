<% if adjustments.sum(&:amount) != 0 %>
  <tr class="adjustment">
    <td class="no_display" colspan="4" align='right'><h5><%= type %>: <%= label %></h5></td>
    <td data-title="<%= type %>: <%= label %>" class="margin-top-10"colspan='2'>
      <h5><%= Spree::Money.new(adjustments.sum(&:amount), :currency => @order.currency) %></h5>
    </td>
  </tr>
<% end %>
