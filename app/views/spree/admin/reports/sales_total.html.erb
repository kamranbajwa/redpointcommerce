<% content_for :page_title do %>
  <%= Spree.t(:sales_totals) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to spree.admin_reports_url, :class => 'btn blue' do %>
  <%= Spree.t(:back_to_reports_list)%>
  <% end %></li>
<% end %>

<div class="row">

  <% content_for :table_filter_title do %>
  <%= Spree.t(:date_range) %>
  <% end %>

  <% content_for :table_filter do %>
  <%= render :partial => 'spree/admin/shared/report_order_criteria', :locals => {} %>
  <% end %>
  <div class="" >
    <div class="portlet box blue">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-cogs"></i>Sales Total
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse" data-original-title="" title="">
          </a>
        </div>
      </div>
      <div class="portlet-body flip-scroll">
        <table class="admin-report table table-bordered table-striped table-condensed flip-content" data-hook="sales_total">
          <thead class="flip-content">
            <tr>
              <th><%= Spree.t(:currency) %></th>
              <th><%= Spree.t(:item_total) %></th>
              <th><%= Spree.t(:adjustment_total) %></th>
              <th><%= Spree.t(:sales_total) %></th>
            </tr>
          </thead>
          <tbody>
            <% @totals.each do |key, row| %>
            <tr class="align-center">
              <td><%= key %></td>
              <td><%= row[:item_total].format %></td>
              <td><%= row[:adjustment_total].format %></td>
              <td><%= row[:sales_total].format %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>