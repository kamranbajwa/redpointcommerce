<% content_for :page_title do %>
  <%= Spree.t(:states) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_state_link">
    <%= link_to new_admin_country_state_url(@country), { :remote => true, :icon => 'plus', :id => 'new_state_link', class: "btn blue"} do %><i class="fa fa-plus"></i> <%= Spree.t(:new_state)%><% end %>
  </li>
<% end %>
<div class="col-md-1">
</div>

<div data-hook="country" class="col-md-12 select-country-state">
	<%= label_tag :country, Spree.t(:country) %>
	<select id="country" class='observe_field select2 form-control' data-base-url="<%=admin_states_path(:format => :js) %>?country_id=" data-update="#state-list">
		<%= options_from_collection_for_select(@countries, :id, :name, @country.id) %>
	</select>
</div>
<div class="col-md-1">
</div>

<div id="state-list" data-hook>
  <%= render :partial => 'state_list'%>
</div>
