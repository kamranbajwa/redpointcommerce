<style>
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    color: #000;
    line-height: 1.1;
  }
  #content-header {
    background-color: #dedede;
    border-bottom: 0px solid #717176;
    padding: 15px 0;
  }
  input[type="submit"]:hover, input[type="button"]:hover, button:hover, .button:hover {
    background-color: #000;
    color: white;
  }
  input[type="submit"], input[type="button"], button, .button {
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -ms-border-radius: 3px;
    -o-border-radius: 3px;
    border-radius: 3px;
    display: inline-block;
    padding: 8px 15px;
    border: none;
    background-color: #717176;
    color: white;
    text-transform: uppercase;
    font-weight: 600 !important;
    white-space: nowrap;
  }
  .select2-container .select2-choice {
    background-image: none !important;
    background-color: #717176;
    border: none !important;
    box-shadow: none !important;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -ms-border-radius: 3px;
    -o-border-radius: 3px;
    border-radius: 3px;
    color: white !important;
    font-size: 90%;
    height: 31px;
    line-height: inherit !important;
    padding: 5px 15px 7px;
  }

  .select2-container:hover .select2-choice, .select2-container.select2-container-active .select2-choice {
    background-color: #000 !important;
    border-color: #000 !important;
  }
  .select2-drop {
    box-shadow: none !important;
    z-index: 1000000;
    max-width: auto !important;
    border-top: 1px solid;
    border-color: #000;
  }
  table tbody tr.state-complete td:first-child {
    border-left-color: #000;
  }
  fieldset legend {
    background-color: white;
    color: #717176;
  }
  fieldset label {
    color: #000;
  }
  input[type="text"], .select2-search input, .select2-container-multi .select2-choices, input[type="password"], input[type="email"], input[type="date"], input[type="datetime"], input[type="time"], input[type="url"], input[type="number"], input[type="tel"], textarea, fieldset {
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -ms-border-radius: 3px;
    -o-border-radius: 3px;
    border-radius: 3px;
    padding: 7px 10px;
    border: 1px solid #dedede;
    color: #5498da;
    font-size: 90%;
  }

  input[type="text"], .select2-search input, .select2-container-multi .select2-choices, input[type="password"], input[type="email"], input[type="date"], input[type="datetime"], input[type="time"], input[type="url"], input[type="number"], input[type="tel"], textarea, fieldset {
    color: #dedede;
    font-size: 90%;
  }
  .pagination .page.current {
    background-color: #dedede;
    border-radius: 3px;
    color: white;
  }
  table thead th {
    background-color: #eff5fc;
    border-bottom: medium none;
    border-top: 1px solid #cee1f4;
    font-size: 85%;
    font-weight: 600;
    color:#000;
    padding: 10px;
    text-transform: uppercase;
  }

  table th, table td {
    border-bottom: 1px solid #cee1f4;
    border-right: 1px solid #cee1f4;
    padding: 7px 5px;
    color: #000;
    text-overflow: ellipsis;
    vertical-align: middle;
  }

  #sidebar .sidebar-title {
    color: #000;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    text-transform: uppercase;
  }
</style>
<% if content_for?(:page_title) || content_for?(:page_actions) %>
  <div id="content-header" data-hook>
    <div class="container">
      <div class="sixteen columns">
        <div class="block-table">
          <% if content_for?(:page_title) %>
            <div class="table-cell">
              <h1 class="page-title <%= yield :page_title_classes %>"><%= yield :page_title %></h1>
            </div>
          <% end %>

          <% if content_for?(:page_actions) %>
            <div class="page-actions table-cell toolbar" data-hook="toolbar">
              <ul class="inline-menu">
                <%= yield :page_actions %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
