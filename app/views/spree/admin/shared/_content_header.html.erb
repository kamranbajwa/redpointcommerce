<% if content_for?(:page_title) || content_for?(:page_actions) %>
  <div class="page-head" data-hook>
          <% if content_for?(:page_title) %>
            <div class="page-title ">
             <h1> <%= yield :page_title %> </h1>
            </div>
          <% end %>
          <% if content_for?(:page_actions) %>
              <ul class="pager">
                <%= yield :page_actions %>
              </ul>
          <% end %>
        </div>
<% end %>