<div class="" >
<div class="portlet box blue">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-cogs"></i>Categories
    </div>
    <div class="tools">
      <a href="javascript:;" class="collapse" data-original-title="" title="">
      </a>
    </div>
  </div>
  <div class="portlet-body flip-scroll">
    <table class="index sortable table table-bordered table-striped table-condensed flip-content" id='listing_taxonomies'  data-hook data-sortable-link="<%= update_positions_admin_taxonomies_url %>" >
      <thead class="flip-content">
        <tr data-hook="taxonomies_header">
          <th class="no-border"></th>
          <th><%= Spree.t(:name) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody>
       <% @taxonomies.each do |taxonomy| %>
       <tr id="<%= spree_dom_id taxonomy %>" data-hook="taxonomies_row" class="<%= cycle('odd', 'even')%>">
        <td class="no-border"><span class="handle"></span></td>
        <td class="align-center"><%= taxonomy.name %></td>
        <td class="actions">
          <%= link_to_edit taxonomy.id, :no_text => true %>
          <%= link_to_delete taxonomy, :no_text => true %>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>
</div>
</div>