<% content_for :page_title do %>
  <%= Spree.t(:new_taxonomy) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to spree.admin_taxonomies_path, class: "btn blue" do %><i class="fa fa-arrow-left"></i> <%= Spree.t(:back_to_taxonomies_list)%><% end %>
  </li>
<% end %>

 <div class="portlet box blue">
   <div class="portlet-title">
    <div class="caption">
       <%= Spree.t(:new_taxonomy) %>
    </div>
    <div class="tools">
      <a href="" class="collapse" data-original-title="" title="">
      </a>
    </div>
  </div>
  <div class="portlet-body form">
<%= form_for [:admin, @taxonomy], multipart: true do |f| %>
  <div class="form-body">
    <%= render :partial => 'form', :locals => { :f => f } %>
  </div>
  <div class="clear"></div>
  <div class="filter-actions actions form-actions" data-hook="buttons">
    <%= button Spree.t(:create), 'ok' %>
  </div>
<% end %>
</div>
</div>
