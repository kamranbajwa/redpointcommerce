<% content_for :page_title do %>
  <%= Spree.t(:editing_payment_method) %> <i class="fa fa-arrow-right"></i> <%= @payment_method.name %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to admin_payment_methods_path, :icon => 'arrow-left', class: "btn blue" do %><i class="fa fa-arrow-left"></i> <%= Spree.t(:back_to_payment_methods_list)%><% end %>
  </li>  
<% end %>
<div class="portlet box blue">
 <div class="portlet-title">
  <div class="caption">
    <i class="fa fa-gift"></i> <%= Spree.t(:editing_payment_method) %>
  </div>
  <div class="tools">
    <a href="" class="collapse" data-original-title="" title="">
    </a>
  </div>
</div>
<div class="portlet-body form">
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @payment_method } %>

<%= form_for @payment_method, :url => admin_payment_method_path(@payment_method) do |f| %>
<div class="form-body">
    <%= render :partial => 'form', :locals => { :f => f } %>
    </div>
    <div data-hook="buttons" class="filter-actions actions form-actions">
      <%= button Spree.t('actions.update'), 'refresh' %>
    </div>
<% end %>
</div>
</div>