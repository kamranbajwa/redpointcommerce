<% content_for :page_title do %>
  <%= Spree.t(:editing_stock_location) %> <i class="fa fa-arrow-right"></i>
  <%= @stock_location.name %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to  admin_stock_locations_path, :class => 'btn blue' do %><i class="fa fa-arrow-left"></i> <%= Spree.t(:back_to_stock_locations_list)%><% end %></li>
<% end %>
<div class="portlet box blue">
 <div class="portlet-title">
  <div class="caption">
    <i class="fa fa-gift"></i> <%= Spree.t(:new_stock_location) %>
  </div>
  <div class="tools">
    <a href="" class="collapse" data-original-title="" title="">
    </a>
  </div>
</div>
<div class="portlet-body form">
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @stock_location } %>

<%= form_for [:admin, @stock_location] do |f| %>
  <div class="form-body">
    <%= render :partial => 'form', :locals => { :f => f } %>
  </div>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>
</div>
</div>