<%=render :partial=>'cms_pages_sub_nav'%>
<div class="container">
  <div class="row">
    <div class="with-sidebar " >
      <div class="twelve columns"> <br>
        <div class="row">
          <%= link_to "Add new Page", new_admin_cms_page_path, class: 'btn btn-default' %>
          <p><%= @current_template.first.name %></p>
