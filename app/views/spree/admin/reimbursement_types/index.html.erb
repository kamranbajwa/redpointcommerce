<% content_for :page_title do %>
  <%= Spree.t(:reimbursement_types) %>
<% end %>
<div class="col-md-12">
  <% if @reimbursement_types.any? %>
  <div class="portlet box blue">
    <div class="portlet-title">
      <div class="caption">
        <i class="fa fa-cogs"></i><%= Spree.t(:reimbursement_types) %>
      </div>
      <div class="tools">
        <a href="javascript:;" class="collapse" data-original-title="" title="">
        </a>
      </div>
    </div>
    <div class="portlet-body flip-scroll">
      <div id="new_state" data-hook></div>
      <table class="table table-bordered table-striped table-condensed flip-content" id='listing_reimbursement_types' data-hook>
        <thead class="flip-content">
         <tr data-hook="reimbursement_types_header">
          <th><%= Spree.t(:name) %></th>
          <th><%= Spree.t(:type) %></th>
        </tr>
        </thead>
        <tbody>
          <% @reimbursement_types.each do |reimbursement_type| %>
          <tr id="<%= spree_dom_id reimbursement_type %>" data-hook="reimbursement_type_row" class="<%= cycle('odd', 'even')%>">
            <td class="align-center">
              <%= reimbursement_type.name.humanize %>
            </td>
            <td>
              <%= reimbursement_type.type.split("::").third rescue " " %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/reimbursement_type')) %>,
    <%= link_to Spree.t(:add_one), new_object_url %>!
  </div>
  <% end %>
</div>
