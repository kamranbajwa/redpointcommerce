
<% content_for :page_title do %>
  <%= Spree.t('stock_transfer') %> (<%= @stock_transfer.number %>)
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to admin_stock_transfers_path, :class => "btn blue" do %><i class="fa fa-arrow-left"></i><%= Spree.t(:back_to_stock_transfers_list)%> <% end %>
  </li>
  <li>
    <%= link_to new_admin_stock_transfer_path, class: "btn blue" do %><i class="fa fa-arrow-right"></i><%= Spree.t(:new_stock_transfer)%><% end%>
  </li>
<% end %>
<div class="portlet light">
<div class="portlet-body form">
  <legend align="center"><%= Spree.t(:stock_transfer) %></legend>

  <div class="alpha six columns">
    <div class="field">
      <label><%= Spree.t(:reference) %></label>
      <div class="value"><%= @stock_transfer.reference %></div>
    </div>
  </div>

  <div class="omega six columns">
    <div class="field">
      <label><%= Spree.t(:created_at) %></label>
      <div class="value"><%= @stock_transfer.created_at %></div>
    </div>
  </div>

  <% if @stock_transfer.source_movements.present? %>
    <fieldset class="no-border-bottom">
      <legend id="stock-location-source">
        <%= Spree.t(:source) %> <i class="fa fa-arrow-right"></i> <%= @stock_transfer.source_location.name %>
      </legend>
      <%= render :partial => 'stock_movements', :object => @stock_transfer.source_movements %>
    </fieldset>
  <% end %>

  <% if @stock_transfer.destination_movements.present? %>
    <fieldset class="no-border-bottom">
      <legend id="stock-location-destination">
        <%= Spree.t(:destination) %> <i class="fa fa-arrow-right"></i> <%= @stock_transfer.destination_location.name %>
      </legend>
      <%= render :partial => 'stock_movements', :object => @stock_transfer.destination_movements %>
    </fieldset>
  <% end %>

</div>
</div>