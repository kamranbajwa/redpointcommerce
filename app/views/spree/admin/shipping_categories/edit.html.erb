<% content_for :page_title do %>
  <%= Spree.t(:editing_shipping_category) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to spree.admin_shipping_categories_path, :icon => 'arrow-left', class: "btn blue" do %><i class="fa fa-arrow-left"></i><%= Spree.t(:back_to_shipping_categories_list)%> <% end %>
  </li>
<% end %>
<div class="portlet box blue">
 <div class="portlet-title">
  <div class="caption">
    <i class="fa fa-gift"></i> <%= Spree.t(:new_shipping_category) %>
  </div>
  <div class="tools">
    <a href="" class="collapse" data-original-title="" title="">
    </a>
  </div>
</div>
<div class="portlet-body form">
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @shipping_category } %>

<%= form_for [:admin, @shipping_category] do |f| %>
  <div class="form-body">
