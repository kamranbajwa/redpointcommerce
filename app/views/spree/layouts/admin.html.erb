  <head data-hook="admin_inside_head">
    <%= render :partial => 'spree/admin/shared/head' %>
  </head>

  <body class='admin'>
    <div id='wrapper' data-hook>

      <% if flash[:error] %>
        <div class="flash error"><%= flash[:error] %></div>
      <% end %>
      <% if notice %>
        <div class="flash notice"><%= notice %></div>
      <% end %>
      <% if flash[:success] %>
        <div class="flash success"><%= flash[:success] %></div>
      <% end %>

      <div id="progress">
        <div class="wrapper">
          <div id="spinner"></div>
          <div class="progress-message"><%= Spree.t(:loading) %>...</div>
        </div>
      </div>

      <%= render :partial => 'spree/admin/shared/alert', :collection => session[:alerts] %>

      <%= render :partial => 'spree/admin/shared/header' %>
      <%= render :partial => 'spree/admin/shared/menu' %>
      <%= render :partial => 'spree/admin/shared/sub_menu' %>
      <%= render :partial => 'spree/admin/shared/content_header' %>
      <%if params[:controller]=="spree/admin/organizations" or params[:controller]=="spree/admin/templates" or params[:controller]=="spree/admin/slider_images" or params[:controller]=="spree/admin/cms_pages" or params[:controller] == "spree/admin/api_users"  or params[:controller]=="spree/admin/promotion_emails" or params[:controller]=="spree/admin/email_templates" or params[:controller]=="spree/admin/blogs" or params[:controller] == "spree/admin/template_images" or params[:controller] == "spree/admin/template_images/new" %>
      <%else%>
      <div class="container">
      <%end%>
        <div class="row">
          <%if params[:controller]=="spree/admin/organizations" or params[:controller]=="spree/admin/templates" or params[:controller]=="spree/admin/slider_images" or params[:controller]=="spree/admin/cms_pages" or params[:controller]=="spree/admin/logos" or params[:controller] == "spree/admin/api_users" or params[:controller]=="spree/admin/email_templates" or params[:controller]=="spree/admin/promotion_emails"or params[:controller]=="spree/admin/blogs" or params[:controller] == "spree/admin/template_images" or params[:controller] == "spree/admin/template_images/new"%>
      <div class="<%= 'with-sidebar ' if content_for?(:sidebar)  %>" id="content" style="margin-top:0px"  data-hook>  
      
      <%else%>
          
      <div class="<%= 'with-sidebar ' if content_for?(:sidebar) %>" id="content" data-hook>
      <%end%>
            <%= render :partial => 'spree/admin/shared/table_filter' %>
            <div class="<%= if content_for?(:sidebar) then 'twelve' else 'sixteen' end %> columns">
              <%= yield %>
            </div>
            <%= render :partial => 'spree/admin/shared/sidebar' %>
          </div>
        </div>
      </div>
    </div>
    <div data-hook="admin_footer_scripts">
      <%= render :partial => 'spree/admin/shared/footer' %>
    </div>
  </body>
</html>
