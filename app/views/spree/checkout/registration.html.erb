
  

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>


<h1 class="register-align"><%= Spree.t(:registration) %></h1>
<div id="registration" data-hook>
  <div id="account" class="columns alpha eight">
    <%= render template: 'spree/user_sessions/new' %>
  </div>
  <% if Spree::Config[:allow_guest_checkout] %>
  <div  class="container">
  <div class="col-md-12" style="padding:0px;">
<div class="col-md-3" style="padding:0px;">
  

    <div id="guest_checkout" data-hook >
      <h6 class="title-style">Checkout as a Guest</h6>
      <%#*<h1 class="title-style"><%= Spree.t(:guest_user_account) %>
    <%#*</h1>%>
      <% if flash[:registration_error] %>
        <div class='flash error'><%#= flash[:registration_error] %></div>
     <% end %>
      <%= form_for @order, :url => update_checkout_registration_path, :method => :put, :html => { :id => 'checkout_form_registration' } do |f| %>
        <p>
          <%= f.label :email, Spree.t(:email) %><br />
          <%= f.email_field :email, :class => 'title guest-field' %>
        </p>
        

        <p><%= f.submit Spree.t(:continue), :class => 'btn btn-primary size-login-button temp-3-button-width' %></p>
      <% end %>

    </div>
  <% end %>
</div>
</div>
</div>

</div>

           