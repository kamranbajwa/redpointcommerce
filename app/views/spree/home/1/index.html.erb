                 <div style="clear:both;"></div>
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="padding-top: 0px !imporatant;">
  <!-- Indicators -->
  
 <!-- Indicators -->
  <ol class="carousel-indicators">
   <%@selected_template.spree_slider_images.each_with_index do |image,index| %>
   <% if index == 0 %>
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <%else%>
     <li data-target="#myCarousel" data-slide-to=<%=index%>></li>
   <%end%>
   <%end%>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
  <%if @selected_template.spree_slider_images.length==0%>
  <div class="item active">
      <img src="/assets/default-sliders/1.jpg" alt="" width="1300" height="500">
    </div>
    <div class="item ">
      <img src="/assets/default-sliders/2.jpg" alt="" width="1300" height="500">
      <img src="/assets/default-sliders/3.jpg" alt="" width="1300" height="500">
      <img src="/assets/default-sliders/4.jpg" alt="" width="1300" height="500">
    </div>
    <%else%>
  <%@selected_template.spree_slider_images.each_with_index do |image,index| %>
   <% if index == 0 %>
    <div class="item active">
      <img src="<%= image.slider_image.url(:xxlarge)%>" alt="">
    </div>
    <%else%>
      <div class="item ">
      <img src="<%= image.slider_image.url(:xxlarge)%>" alt="">
    </div>
    <%end%>

     <%end%> 
     <%end%>
  </div>


  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
