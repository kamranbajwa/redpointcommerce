<!--blog posts section-->
<div class="home-blog text-center clearfix">
  <div class="container">
    <div class="slogan-section animated  clearfix">
      <h2>Latest News from <span>Health and Medical</span></h2>
      <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
    </div>
    <div class="row">
      <div class="col-md-12">
      <% products.take(4).each do |product| %>
        <% url = product_path(product, :taxon_id => @taxon.try(:id)) %>
        <div class="col-md-3 ">
          <div class="spacer ">
            <h3><a href="#"><%= product.name %></a></h3>
            <div class="vm-product-media-container"> <a href="#">
              <%= link_to product_image(product, :itemprop => "image", :class => "img-responsive center-block",:style=>"width:100%; height: 200px;" ), url, :itemprop => 'url' %>
            </a>
              <div class="clear"></div>
            </div>
            <div class="addtocart-area mar-botton">
              <div class="col-md-6"> <span class="price-red"><%= render :partial => "spree/shared/#{@selected_template.template_no}/show_price", :locals => { :p=> product} %></span> </div>
              <div class="col-md-6">
              <a href="<%= url %>">
                <button class="btn btn-products">Add to Cart</button></a>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <br>
  <a href="/products">
  <button class="btn btn-products">More Products...</button>
  </a>
</div>
<!--blog posts section end-->
<hr>
