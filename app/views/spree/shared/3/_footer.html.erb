<footer id="main-footer" class="site-footer clearfix">
  <div class="container">
    <div class="row"> 
      
      <!--about widget-->
      <div class="col-md-3 col-sm-6">
        <section  class="widget animated widget-li">
         <% if @logo_footer && @logo_footer.check %>
          <h3 class="title"><img src="<%= Spree::Logo.last.avatar.url(:logo)%>"></h3>
          <% end %>
          <div class="textwidget">
           <% if @about_widget && @about_widget.widget_characteristics %>
            <%= @about_widget.widget_characteristics.first(600).html_safe %>
           <% end %>
          </div>
        </section>
      </div>
      
      <!--general services-->
      <div class="col-md-3 col-sm-6">
        <section class="widget animated widget-li links-footer">
          <h4 class="title text-white">USEFUL LINKS</h4>
            <% if @link_widget && @link_widget.widget_characteristics %>
            <%= @link_widget.widget_characteristics.html_safe %>
            <% end %>
        </section>
      </div>
      <div class="clearfix visible-sm"></div>
      
      <!--recent posts-->
      <div class="col-md-3 col-sm-6">
        <section  class="widget animated widget-li">
          <h4 class="title text-white">Shop Location</h4>
          <ul>
            <li>  <%=org_address[0].gsub(',', ', ').html_safe || ""%></li>

          </ul>
        </section>
      </div>
      <!--subscription form-->
      <div class="col-md-3 col-sm-6 widget-li">
        <section  class="widget animated ">
          <h4 class="title text-white">OPENING Hours</h4>
          <div class="textwidget">
          <% if @org.opening_day.present? %>
            <p><%= @org.opening_day  %> - <%= @org.closing_day %> </p>
            <% else %>
            <p> Monday - Sunday </p>
            <% end %>
            <% if @org.opening_hour.present? %>
            <p><%= @org.opening_hour %> - <%= @org.closing_hour%> </p>
             <% else %>
            <p> 11:00 am - 12:00 pm</p>
            <% end %>
          </div>
          <div> </div>
        </section>
      </div>
    </div>
    <div class="footer-bottom clearfix">
      <div class="row">
        <div class="col-sm-7">
          <p>&copy; Copyright 2015. All Rights Reserved </p>
        </div>
        <!--footer social icons-->
        <div class="col-sm-5 clearfix">
          <ul class="footer-social-nav">
          <%if @org.twitter_url.present? %>
            <li><a target="_blank" href=<%= @org.twitter_url || '#'%>><i class="fa fa-twitter"></i></a></li>
            <%end%>
            <%if @org.facebook_url.present? %>
            <li><a target="_blank" href=<%= @org.facebook_url || '#'%>><i class="fa fa-facebook"></i></a></li>
            <%end%>
            <%if @org.google_url.present? %>
            <li><a target="_blank" href=<%= @org.google_url || '#'%>><i class="fa fa-google-plus"></i></a></li>
            <%end%>
            <%if @org.youtube.present? %>
             <li><a target="_blank" href=<%= @org.youtube || '#'%>><i class="fa fa-youtube"></i></a></li>
             <%end%>
             <%if @org.linked_in.present? %>
           <li><a target="_blank" href=<%= @org.linked_in || '#'%>><i class="fa fa-linkedin"></i></a></li>
           <%end%>
            <%if @org.pinterest.present? %>
            <li><a target="_blank" href=<%= @org.pinterest || '#'%>><i class="fa fa-pinterest-square"></i></a></li>
            <%end%>
           <!--
            <li><a target="_blank" href="skype:skypeusername?add"><i class="fa fa-skype"></i></a></li>
            <li><a target="_blank" href="#"><i class="fa fa-rss"></i></a></li>-->
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
<%= javascript_include_tag "/assets/#{@selected_template.template_no}/all_law_js" %>
