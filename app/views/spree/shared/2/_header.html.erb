  <header class="topHead" id="topNav" style="height: 81px;"><!-- remove class="topHead" if no topHead used! -->
    <div class="container"> 
      
      <!-- Mobile Menu Button -->
      <button data-target=".nav-main-collapse" data-toggle="collapse" class="btn btn-mobile" style="margin-top: 8px;"> <i class="fa fa-bars"></i> </button>
      
      <!-- Logo text or image --> 
      <a href="/" class="logo" style="margin-top: 0px; line-height: 50px;"> <img alt="Atropos" src="<%= Spree::Logo.last.avatar.url(:logo)%>" style="width:85%;"> </a> 
      
      <!-- Top Nav -->
      <div class="navbar-collapse nav-main-collapse collapse pull-right top-nav-bg" style="margin-top: 16px;">
        <nav class="nav-main mega-menu">
          <ul id="topMain" class="nav nav-pills nav-main scroll-menu">
            <li class="mega-menu-item mega-menu-two-columns"> <a href="/"> Home </a> </li>
            <li class="mega-menu-item mega-menu-two-columns"> <a href="/products"> Services </a> </li>
           

            <!-- Arrange Menus -->   
            <% @customize_pages.each_with_index  do |page, index|%>
                <% if index >= 2 %>
                  <% if index == 2 %>
                    <li class="dropdown">
                      <a class="dropdown-toggle" href="#">
                          More <i class="fa fa-angle-down"></i>
                      </a>
                      <ul class="dropdown-menu menu_color">
                  <% end %>
                        <li><a href="/page/<%= page.id %>"><%= page.title%></a></li>
                  <% if index+1 == @customize_pages.length %>
                      </ul>
                    </li>
                  <% end %>
                <% else %>
                  <li class="mega-menu-item mega-menu-two-columns"> <a href="/page/<%= page.id %>"> <%= page.title%> </a> </li>
                <% end %>
            <% end %>
            <li class="mega-menu-item mega-menu-two-columns"> <a href="/page/<%= @about_us_page.try(:id)%>"> About Us </a> </li>
            <li class="mega-menu-item mega-menu-two-columns"> <a href="/messages"> Contact Us </a> </li>
            <!-- GLOBAL SEARCH -->
            <li class="search"> 
              <!-- search form -->
              <%= form_tag spree.products_path, class: "input-group pull-right",:method => :get do %>
              <%= search_field_tag :keywords, params[:keywords], :placeholder => Spree.t(:search), :class => "search-text-area form-control" %>
              <span class="input-group-btn">
              <%= submit_tag Spree.t(:search), :name => nil,:class => "btn btn-primary notransition" %>
               </span>
            <% end %>
