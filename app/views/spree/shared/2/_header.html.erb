                <span class="input-group-btn">
                <button class="btn btn-primary notransition" style="margin-top: 8px;"><i class="fa fa-search"></i></button>
                </span>
              </form> -->
              <!-- /search form --> 
            </li>
            <!-- /GLOBAL SEARCH --> 
            
            <!-- QUICK SHOP CART -->
          <li class="mega-menu-item mega-menu-two-columns">
          <a href="/cart" class="fa fa-shopping-cart cart-align">
            <span class="badge pull-right custom-badge"><%= @order.try(:line_items)? @order.try(:line_items).count : 0 %></span>
            </a>
          </li>
            
         
        
              
        
            <!-- /QUICK SHOP CART -->
            
          </ul>
        </nav>
