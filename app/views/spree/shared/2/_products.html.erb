<%
paginated_products = @searcher.retrieve_products if params.key?(:keywords)
paginated_products ||= products
%>
 <% products.each do |product| %>
      <% url = product_path(product, :taxon_id => @taxon.try(:id)) %>
      
        <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : [I18n.locale, current_currency, product]) do %>
        <div class="col-md-3">
          <div class="gallery-img">
          <% if product.images.count >= 1
        %>
      <% dimensions = FastImage.size(product.images.first.attachment.url(:original)) %>
      <% if dimensions %>
          <% if dimensions[0] >= 360 && dimensions[1] >= 360%>
        <a href="<%= url %>" itemprop="url"><img alt="<%= product.slug%>" class="img-responsive height-responsive-home" itemprop="image" src="<%= product.images.first.attachment.url(:product)%>"></a>
        <% else %>
           <a href="<%= url %>" itemprop="url"><img alt="<%= product.slug%>" class="img-responsive height-responsive-home" itemprop="image" src="<%= product.images.first.attachment.url(:original)%>"></a>
        <% end %>
        <% else %>
                  <%= link_to product_image(product, :itemprop => "image", :class => "img-responsive height-responsive-home" ), url, :itemprop => 'url' %>
        <% end %>
      <% else %>
             <%= link_to product_image(product, :itemprop => "image", :class => "img-responsive height-responsive-home" ), url, :itemprop => 'url' %>
      <% end%>
            <div class="text-center">
              <h4><%= link_to truncate(product.name, :length => 25), url, :class => 'info', :itemprop => "name", :title => product.name %></h4><%if product.subscription %><small class="styleColor"><span> (Subscription Product)</span></small><% end %>
<%= render :partial => "spree/shared/#{@selected_template.template_no}/show_price", :locals => { :p => product, } %>            </div>
          </div>
        </div>
        <% end %>
    <% end %>
