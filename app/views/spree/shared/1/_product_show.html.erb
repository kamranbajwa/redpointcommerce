<div class="container top-space">
  <br>
    <div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
      <% @body_id = 'product-details' %>

      <div class="columns six alpha product-full" data-hook="product_left_part" >
        <div class="row move-right" data-hook="product_left_part_wrap">


          <div id="product-images" data-hook="product_images">

          <div id="main-image" class="line-hat" data-hook>
            <div class="product-image-wrapper" style="width: 360px; height: 360px; padding-left: 8px;">
              <%= render :partial => 'image' %>
            </div>
          </div>
            <div id="thumbnails" data-hook>
              <%= render :partial => 'thumbnails' %>
            </div>
          </div>

          <div data-hook="product_properties" class="details-titles">
            <%= render :partial => 'properties' %>
          </div>

          <div data-hook="promotions">
           <%= render :partial => 'spree/products/promotions' %>
          </div>

        </div>
      </div>

      <div class="columns ten omega" data-hook="product_right_part">
        <div class="right-nav" data-hook="product_right_part_wrap">

          <div id="product-description" data-hook="product_description">

            <h1 class="product-title" itemprop="name"><%= @product.name %></h1>

            <div itemprop="description" data-hook="description">
              <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
            </div>

            <div id="cart-form" data-hook="cart_form">
              <%= render :partial => "spree/shared/#{@selected_template.template_no}/cart_form" %>
            </div>

          </div>

          <%= render :partial => 'taxons' %>
          
        </div>
      </div>
      
    </div>
</div>

<div class="clear40"></div>
<div class="clear20"></div>

  <div class="container">
              <h3 class="entry-title-bottom">Related Products</h3>
    <div class="row">







          <!-- item -->
          <%@simlier_product.each do |product|%>
          <% unless product.id == @product.id %>
          <% url = product_path(product, :taxon_id => @taxon.try(:id)) %>
      <div class="col-sm-6 col-md-3">
        <div class="products" >
<figure>
<%= link_to product_image(product, :itemprop => "image", :class => "img-responsive center-block",:style=>"width:70%" ), url, :itemprop => 'url' %>
</figure>
            </div>

            <div class="details">
              <div class="name "><%=product.name%></div>
              <div class="description">
                <span class="price selling"><%= display_price(product)%></span>
              </div>
              <div class="clear"></div>

              <div class="clear20"></div>
            </div>
          </div>
          <% end %>
          <%end%>

          <%= render :partial => "spree/shared/2/popup_modal" %>









        </div>        
        
        
        
      </div>
    </div>
  </div>
