<header class="header-style-1" >
<%#*<header id="header" class="row" data-hook >%>
<%#*<div style="margin: 40px;">%>
<%#*<figure id="logo" class="columns six" data-hook><%= logo %>
<%#*</figure>%>
<%#= render :partial => 'spree/shared/nav_bar' %>
<%#= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
<%#*</div>%>
<%#*</header>%>

  <!-- ============================================== TOP MENU ============================================== -->
  <div class="header-top animate-dropdown">
    <div class="container">
      <div class="header-top-inner">
        <div class="cnt-account">
         Welcome to <%=@org.company_name rescue 'PSHQ'%>
        </div><!-- /.cnt-account -->

        <div class="cnt-cart">
          <ul class="list-unstyled list-inline pull-right">
            <li class="dropdown dropdown-small">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">&nbsp;</a>
            </li>

            <li class="dropdown dropdown-small">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">&nbsp;</a>
            </li>
            <li class="dropdown dropdown-cart">
<%#*<a href="#" class="dropdown-toggle lnk-cart btn btn-blue btn-small" data-toggle="dropdown">Cart 02</a>%>

              <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>

              <div class="clearfix"></div>
            </li><!-- /.dropdown-cart -->
          </ul><!-- /.list-unstyled -->
          <ul class="list-unstyled list-inline pull-right">
            <li><a href="/checkout">Checkout</a></li>
            <% if spree_user_signed_in? %>
            <li><a href="/account">My Account</a></li>
            <li> <%=  link_to 'Sign Out', spree_logout_path %></li>
            <% else %>
            <li><a href="/login">Login</a></li>
            <% end %>
          </ul>
        </div><!-- /.cnt-cart -->
        <div class="clearfix"></div>
      </div><!-- /.header-top-inner -->
    </div><!-- /.container -->
  </div><!-- /.header-top -->
  <!-- ============================================== TOP MENU : END ============================================== -->
  <!-- ============================================== NAVBAR ============================================== -->
  <div class="header-nav animate-dropdown home">
    <div class="yamm navbar navbar-default" role="navigation" style="background-color: <%= header_color() %> !important;">
      <div class="container-class container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <div class="logo">
              <img src="<%= Spree::Logo.last.avatar.url(:logo)%>" class="img-responsive"> 
            </div>	
          </a><!-- /.navbar-brand -->
          <div class="clearfix"></div>
        </div><!-- /.navbar-header-->
        <div class="nav-bg-class no-nav-bg">
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            <% @customize_pages.each_with_index do |page, index|%>
             <% if index >= 5 %>
                  <% if index == 5 %>
                    <li class="dropdown dropdown-small ware-house-dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          More 
                          <b class="caret">
                            
                          </b>
                      </a>
                      <ul class="dropdown-menu">
                  <% end %>
                        <li><a href="<%= set_paths(page) %>"><%= page.title.upcase%></a></li>
                  <% if index+1 == @customize_pages.length %>
                      </ul>
                    </li>
                  <% end %>
                <% else %>
                <li class=""> <a href="<%= set_paths(page) %>"> <%= page.title.upcase%> </a> </li>
              <%end%>
            <% end %>
            </ul><!-- /.navbar-nav -->
            <div class="nav-outer">
              <div class="cnt-search">

                <div>
                  <%= render :partial => 'spree/shared/nav_bar' %>
                </div>
              </div><!-- /.cnt-search -->
              <div class="clearfix"></div>				
            </div><!-- /.nav-outer -->
          </div>

        </div><!-- /.nav-bg-class -->

      </div><!-- /.container-class -->
    </div><!-- /.navbar-default -->
  </div><!-- /.header-nav -->
  <!-- ============================================== NAVBAR : END ============================================== -->

</header>

<style type="text/css">
.ware-house-dropdown .dropdown-menu { background-color: <%= header_color()%> !important;}
header.header-style-1 .header-nav .navbar-nav > li > a, .dropdown.dropdown-small .dropdown-menu > li > a  { color: <%= header_font()%> !important;}
  footer .links-social h3.title, .links p {color: <%= footer_font()%> !important;}
}

</style>