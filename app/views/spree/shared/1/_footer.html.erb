<!-- ============================================== INFO BOXES ============================================== -->
<footer>

  <!-- ============================================== INFO BOXES : END ============================================== -->	
  <div class="links-social">
    <div class="container-class container">
      <div class="links-social-inner">
        <div class="">
          <div class="col-md-8">
            <!-- ============================================== LINK GROUPS ============================================== -->
            <div class="link-groups">
              <div class="">
                <div class="col-sm-4">
                  <div class="links">
                    <h3 class="title">About Us</h3>
                    <% if @about_widget && @about_widget.widget_characteristics %>
                    <%= @about_widget.widget_characteristics.first(600).html_safe %>
                    <% end %>
                  </div>
                </div><!-- /.col -->

                <div class="col-sm-4">
                  <div class="links">
                    <h3 class="title">We are Open</h3>
                    <ul>
                     <% if @org.opening_day.present? %>
                     <p class="footer-text" ><%= @org.opening_day %> - <%= @org.closing_day %> </p>
                     <% else %>
                     <p class="footer-text" > Monday - Sunday</p>
                     <% end %>
                     <% if @org.opening_hour.present? %>
                     <p class="footer-text"><%= @org.opening_hour %> - <%= @org.closing_hour%> </p>
                     <% else %>
                     <p class="footer-text"> 11:00 am - 12:00 pm</p>
                     <% end %>
                  </div>
                </div><!-- /.col -->

                <div class="col-sm-4">
                  <div class="links">
                    <h3 class="title">Important Links</h3>
                    <% if @link_widget && @link_widget.widget_characteristics %>
                    <%= @link_widget.widget_characteristics.html_safe %>
                    <% end %>
                  </div>
                </div><!-- /.col -->


              </div><!-- /.row -->
            </div><!-- /.link-groups -->
            <!-- ============================================== LINK GROUPS : END ============================================== -->					</div><!-- /.col -->

          <div class="col-md-4">
            <!-- ============================================== SOCIAL-NEWSLETTER ============================================== -->
            <div class="social-newsletter">
              <div class="social-links">
              <%if @org.facebook_url!="" or @org.twitter_url!="" or  @org.google_url!="" %>
                <h3 class="title">CONNECT WITH US</h3>
                <ul class="social list-inline list-unstyled">
                <%if @org.facebook_url!=""%>
                  <li><a href=<%= @org.facebook_url || '#'%> target="_blank"><i class="fa fa-facebook"></i></a></li>
                  <%end%>
                  <%if @org.twitter_url!=""%>
                <li><a href=<%= @org.twitter_url || '#'%> target="_blank"><i class="fa fa-twitter"></i></a></li>
                <%end%>
                <%if @org.google_url!=""%>
                <li><a href=<%= @org.google_url || '#'%> target="_blank"><i class="fa fa-google-plus"></i></a></li>
                <%end%>
                </ul>
                <%end%>
              </div><!-- /.social-links -->


            </div><!-- /.social-newsletter -->
            <!-- ============================================== SOCIAL-NEWSLETTER : END ============================================== -->					</div><!-- /.col-md-4 -->
        </div><!-- /.row -->
      </div><!-- /.links-social-inner-->
    </div><!-- /.container -->
  </div><!-- /.links-social -->

  <div class="copyright">
    <div class="container">
      <div class="pull-left">
        Copyright &copy; <a href="#">Redpoint Commerce</a> | All Rights Reserved.
      </div>
      <div class="pull-right">
        <a href="/termsandconditions">Terms & conditions</a>
        &nbsp; &nbsp;&nbsp;
        <a href="/privacypolicy">Privacy Policy</a>

      </div>

    </div>
  </div>

</footer>
