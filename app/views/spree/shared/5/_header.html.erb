<div class="header-top clearfix" style="background-color: <%= header_color()%>;">
  <div class="container">
    <div class="row">
       <div class="col-md-12 top-head-bar">
       <div class="col-lg-6"><span class="welcome-msg">Welcome to <%=@org.company_name rescue 'PSHQ'%> </span><a href="/signup">Registration <i class="fa fa-users"></i></a> | <% if spree_user_signed_in? %> <%=  link_to 'Sign out', spree_logout_path %> <% else %><a href="/login">Login <i class="fa fa-key"></i></a> <% end %>|  <a href="/cart">Cart <i class="fa fa-shopping-cart"></i></a> </div>
        <div class="col-lg-6"></div>
       <div class="pull-right">
        <div id="cart"> 
        <span class="total-price">
         <%= form_tag spree.products_path, :method => :get, class: "search-form" do %>
               <%= search_field_tag :keywords, params[:keywords], class: "border-search search-input1", placeholder: "Search"%>
               <a href="#" class="search-anc"><i class="fa fa-search"></i></a>
               <%end%>

        </span> </div>
      </div>
      </div>
    </div>
  </div>
</div>
<header id="header" style="background-color: <%= header_color()%>;">
  <div class="container">
  <!-- Website Logo -->
  <div class="logo clearfix"> <a href="/"> <img src="<%= Spree::Logo.last.avatar.url(:logo)%>" alt=""> </a> </div>
  <div class=" pull-right ipad-left " style="margin-top:2%;">
    <div id="zo2-position-0" class="">
      <!-- Virtuemart 2 Ajax Card -->
      <div id="zt_top_cart" class="">
        <div id="cart">
        <a href="/cart"><i class="fa fa-shopping-cart"></i>
        <span class="total-item" id="link-to-cart" data-hook> <noscript>
          <%= link_to "Item", '/cart' %>
          </noscript></span></a>
        <script>Spree.fetch_cart()</script>
        </div>
      </div>
    </div>
    <!-- Main Navigation --> 
  </div>
  <div id="responsive-menu-container"></div>
</div></header>
<div style="clear:both"  ></div>
<div class="clearfix"  >
  <div class="nav-bg">
    <div class="container">
      <nav class="main-menu">
        <ul class="header-nav clearfix" id="menu-main-menu">
           <% @customize_pages.each_with_index  do |page, index|%>
              <% if index >= 5 %>
                  <% if index == 5 %>
                    <li  class="dropdown" id="menu1">
                     <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">More <i class="fa fa-angle-down"></i></a>
                      <ul class="dropdown-menu">
                  <% end %>
                        <li><a href="<%= set_paths(page) %>"><%= page.title.capitalize%></a></li>
                  <% if index+1 == @customize_pages.length %>
                      </ul>
                    </li>
                  <% end %>
                <% else %>
                  <li> <a href="<%= set_paths(page) %>"> <%= page.title.capitalize%> </a> </li>
                <% end %>
            <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>
<style type="text/css">
  .top-head-bar a, .welcome-msg, .cart-info { color: <%= header_font() %>}
  #main-footer .widget h3.title, #main-footer {color: <%= footer_font() %>}
</style>
