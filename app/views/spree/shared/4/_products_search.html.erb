<div class="products">

          <%
          paginated_products = @searcher.retrieve_products if params.key?(:keywords)
          paginated_products ||= products
          %>
          <% products.each do |product| %>
          <% url = product_path(product, :taxon_id => @taxon.try(:id)) %>
          <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : [I18n.locale, current_currency, product]) do %>
          <div class="col-md-3 col-sm-6 col-xs-12 product">
            <div class="product-box">
              <!-- <a href="#"><img src="/assets/1.jpg" class="img-responsive center-block"></a> -->
              <%= link_to product_image(product, :itemprop => "image", :class => "img-responsive center-block",:style=>"width:100%" ), url, :itemprop => 'url' %>
            </div>
            <div class="product-info">
              <div class="name"><%=product.name%></div><%if product.subscription %> (Subscription Product) <% end %>
              <div class="price"><%= render :partial => "spree/shared/#{@selected_template.template_no}/show_price", :locals => { :p=> product} %></div>
              <div class="clear"></div>
              <%= link_to url, :class => "btn btn-primary add_to_cart cart_popup", :remote => true, "data-toggle" => "modal", "data-target" => "#myModal", style: "width: 100%" do %>
              <i class="fa fa-shopping-cart"></i> ADD TO CART
              <%end%>
              <div class="clear20"></div>
            </div>
          </div>
          <% end %>
          <% end %>
          <!-- end col-sm-3 -->
          <%= render :partial => "spree/shared/2/popup_modal" %>



        </div>