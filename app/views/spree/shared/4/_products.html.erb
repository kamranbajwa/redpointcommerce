<%
paginated_products = @searcher.retrieve_products if params.key?(:keywords)
paginated_products ||= products
%>
 <% products.each do |product| %>
      <% url = product_path(product, :taxon_id => @taxon.try(:id)) %>
      
        <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : [I18n.locale, current_currency, product]) do %>
        <div class="col-md-3 col-sm-6 col-xs-12 product">
        <div class="product-box"
          <div class="gallery-img"><%= link_to product_image(product, :itemprop => "image", :class => "img-responsive center-block",:style=>"width:100%" ), url, :itemprop => 'url' %>
            <div class="text-center sub-height">
              <h4><%= link_to truncate(product.name, :length => 25), url, :class => 'info', :itemprop => "name", :title => product.name %></h4><%if product.subscription %> (Subscription Product) <% end %>
              <p><%= render :partial => "spree/shared/#{@selected_template.template_no}/show_price", :locals => { :p=> product} %></p>
            </div>
          </div>
        </div>

        <% end %>
    <% end %>
