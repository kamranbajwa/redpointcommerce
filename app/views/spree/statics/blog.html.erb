<%= javascript_include_tag "common.js" %>
<div class="container  cont-set top-blog-margin top-space">
<br>
     <div  class="col-md-9">
          <%@blog_post.each do |f|%>
            <div class="">
                <!--post date and comments-->
                <div class="col-sm-2">
                    <div class="left_meta clearfix entry-meta">
                        <time class="entry-time updated" datetime="2014-05-10T11:07:36+00:00">
                            <% if !f.published_at.blank? %>
                            <b><%= f.published_at.strftime("%b")%> </b>
                            <%  end %>
                            <br>
                            <span style=" clear: both; font-weight: bold; font-size: 35px;">
                            <% if !f.published_at.blank? %>
                            <%= f.published_at.strftime("%d")%> 
                            <%  end %>
                            </span></time>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="right-contents-bl">
                        <header class="entry-header">
                            <!--post image-->
                            <figure style="margin-top: 20px;">
                                    <%= image_tag f.avatar.url(:blarge) , class: " wp-post-image" %>
                            </figure>
                            <!--post title-->
                            <h3 class="entry-title"><a href="image-post-format.html">
                               <%= link_to f.title , "/blog/#{f.permalink}" , class: "icon_link with-tip no-text", "data-action" => "show_post"%>
                             </a></h3>
                            <!--author name-->
                                    <span class="entry-author">
                                        Posted by <span class="entry-author-link"> <a href="#" title="Posts by John Doe"><%= f.author%> </a>
                                        </span>
                                    </span>
                        </header>
                        <!--post content-->
                        <div class="entry-content">
                            <p><%= f.summary.html_safe %> </p>
                        </div>
                     
                        <!--read more button-->
                            <%= link_to "Read More" , "/blog/#{f.permalink}" , class: " read-more-button  icon_link with-tip no-text", "data-action" => "show_post"%>
                    </div>
                </div>
            </div>
         <% end %>
     </div>
     <!--- Catgories  -->
     <div  class="col-md-3">
          <section class="widget widget_categories">
            <h3 style="margin-top:0px" class="title">Categories</h3>
            <ul>
                <li><a href="#" title="View all posts filed under Environment">Environment</a></li>
                <br />
                <li><a href="#" title="View all posts filed under Health Basics">Health Basics</a></li>
                <br />
                <li><a href="#" title="View all posts filed under Lifestyle">Lifestyle</a></li>
                <br />
                <li><a href="#" title="View all posts filed under Motivation">Motivation</a></li>
            </ul>
        </section>
        <div class="socialApis">
                <h3 class="title share-blog">Like Us</h3>

                <div class="api">
                  

                 <div class="fb-like fb-custom" data-href=<%=request.url%>  data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
               </div>
               <div class="api">
                <a href=<%=request.url%> class="twitter-share-button" data-lang="en">Tweet</a>
              </div>

              <div class="api">
                <div class="g-plusone" data-size="medium" data-annotation="inline" data-width="300"></div>
              </div>

            </div>
     </div>
     <!--- End of Catagories -->     
</div>
